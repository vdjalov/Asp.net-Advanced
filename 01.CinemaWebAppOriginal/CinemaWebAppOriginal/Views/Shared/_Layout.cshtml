@using CinemaWebAppOriginal.Services.Data.Interfaces

@{   
    string userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

    int currentYear = DateTime.Now.Year;
    int releaseYear = 2024; // Replace with actual release year of the application
    string footerNote = (releaseYear == currentYear) ? $"{releaseYear}" : $"{releaseYear} - {currentYear}";
}
@inject IManagerService managerService;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaWebAppOriginal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaWebAppOriginal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CinemaWebAppOriginal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                        @if (User?.Identity?.IsAuthenticated ?? false) // show only if user is logged in and a manager
                        {
                            @if (!string.IsNullOrEmpty(userId) && await this.managerService.IsUserAManager(userId)) 
                            {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manager
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cinema" asp-action="Manage">Manage Cinemas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Movie" asp-action="Manage">Manage Movies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ticket" asp-action="Manage">Manage Tickets</a></li>
                            </ul>
                        </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cinema" asp-action="Index">Cinemas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="Index">Movies</a>
                        </li>
                        
                        @if (User?.Identity?.IsAuthenticated ?? false) // show only if user is logged in
                        { 
                            if (!await this.managerService.IsUserAManager(userId))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Watchlist" asp-action="Index">Watchlist</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">Tickets</a>
                                </li>

                            }
                           
                        }
                        
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" m>
        <main role="main" class="py-5">
            @RenderBody()
        </main >
    </div>

    <!-- Footer Section -->        
    <footer class="footer bg-light text-muted mt-5">
        <div class="container text-center">
            <p>&copy; @footerNote CinemaWebAppOriginal | Bringing Cinema and Movies to You</p>
            <p>
                Follow us on:
                <a href="#" class="text-muted mx-1">Facebook</a> 
                <a href="#" class="text-muted mx-1">Twitter</a>
                <a href="#" class="text-muted mx-1">Instagram</a>
            </p>
        </div>
    </footer>
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
